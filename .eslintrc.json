{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:jsx-a11y/recommended",
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"jsx-a11y"
	],
	"rules": {
		"no-unused-vars": ["warn"],
		"no-console": ["warn"],
		"eqeqeq": ["error", "always"],
		"curly": ["error", "all"],
		"camelcase": ["error", {
			"properties": "never"
		}],
		"no-var": ["error"],
		"prefer-const": ["error"],
		"prefer-arrow-callback": ["error"],
		"arrow-spacing": ["error"],
		"no-duplicate-imports": ["error"]
	},
	"ignorePatterns": [
		"node_modules/",
		"vendor/",
		"uploads/",
		"*.min.js"
	]
}
